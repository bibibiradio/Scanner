  <groupId>com.bibibiradio.scanner</groupId>
  <artifactId>scanner</artifactId>
  <packaging>jar</packaging>
  <version>1.0</version>
  <name>scanner</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
		<groupId>junit</groupId>
		<artifactId>junit</artifactId>
		<version>4.8.2</version>
		<scope>test</scope>
	</dependency>
	<dependency>
		<groupId>com.bibibiradio.httpsender</groupId>
